<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gestorinvenntariocifp.AulasController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0"
          style="-fx-background-color: #ffffff; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">

        <!-- Título -->
        <Label text="Aulas" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <!-- Tabla de Aulas -->
        <TableView fx:id="tablaAulas" prefHeight="400.0" prefWidth="700.0"
                   style="-fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <!-- Columna ID -->
                <TableColumn text="ID" fx:id="colId" prefWidth="100.0" style="-fx-alignment: CENTER;" />

                <!-- Columna Numeración -->
                <TableColumn text="Numeración" fx:id="colNumeracion" prefWidth="150.0" style="-fx-alignment: CENTER;" />

                <!-- Columna Descripción -->
                <TableColumn text="Descripción" fx:id="colDescripcion" prefWidth="250.0" style="-fx-alignment: CENTER-LEFT;" />

                <!-- Columna IP -->
                <TableColumn text="IP" fx:id="colIp" prefWidth="200.0" style="-fx-alignment: CENTER;" />
            </columns>
        </TableView>

        <!-- Contenedor para los botones -->
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;">
            <Button text="Atrás" fx:id="btnAtras" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" />
            <Button text="Recargar Aulas" fx:id="btnRecargar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" />
        </HBox>
    </VBox>
</AnchorPane>
