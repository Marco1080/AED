<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestorinvenntariocifp.AulasController">
    <VBox alignment="CENTER" layoutX="50.0" layoutY="50.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;">
        <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #495057;" text="Aulas" />
        <HBox alignment="CENTER" spacing="20.0" style="-fx-padding: 10;">
            <Button fx:id="btnAtras" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="Atrás" />
            <Button fx:id="btnRecargar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10;" text="Recargar aulas" />
        </HBox>
        <TableView fx:id="tablaAulas" prefHeight="400.0" prefWidth="700.0" style="-fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <TableColumn fx:id="colId" prefWidth="100.0" style="-fx-alignment: CENTER;" text="ID" />
                <TableColumn fx:id="colNumeracion" prefWidth="150.0" style="-fx-alignment: CENTER;" text="Numeración" />
                <TableColumn fx:id="colDescripcion" prefWidth="250.0" style="-fx-alignment: CENTER-LEFT;" text="Descripción" />
                <TableColumn fx:id="colIp" prefWidth="200.0" style="-fx-alignment: CENTER;" text="IP" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
