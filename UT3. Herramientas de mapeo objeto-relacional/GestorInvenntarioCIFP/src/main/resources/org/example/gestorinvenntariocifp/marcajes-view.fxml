<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.gestorinvenntariocifp.MarcajesController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f8f9fa;">
    <VBox alignment="CENTER" spacing="20.0" layoutX="50.0" layoutY="50.0"
          style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">

        <!-- Título -->
        <Label text="Lista de Marcajes" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #495057;" />

        <!-- Filtros -->
        <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Buscar por Descripción:" style="-fx-font-size: 14; -fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtBuscarDescripcion" promptText="Ingrese descripción o nombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Desde:" style="-fx-font-size: 14; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dateDesde" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Hasta:" style="-fx-font-size: 14; -fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <DatePicker fx:id="dateHasta" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <HBox spacing="10" alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <Button text="Buscar" fx:id="btnBuscar" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5;" />
                <Button text="Nuevo Marcaje" fx:id="btnNuevoMarcaje" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5;" />
            </HBox>
        </GridPane>

        <!-- Tabla de Marcajes -->
        <TableView fx:id="tablaMarcajes" prefHeight="400.0" prefWidth="700.0"
                   style="-fx-border-color: #ced4da; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;">
            <columns>
                <!-- Columna ID -->
                <TableColumn text="ID" fx:id="colId" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-font-size: 14;" />

                <!-- Columna Producto -->
                <TableColumn text="Producto" fx:id="colProducto" prefWidth="200.0" style="-fx-alignment: CENTER; -fx-font-size: 14;" />

                <!-- Columna Aula -->
                <TableColumn text="Aula" fx:id="colAula" prefWidth="200.0" style="-fx-alignment: CENTER; -fx-font-size: 14;" />

                <!-- Columna Tipo -->
                <TableColumn text="Tipo" fx:id="colTipo" prefWidth="100.0" style="-fx-alignment: CENTER; -fx-font-size: 14;" />

                <!-- Columna Timestamp -->
                <TableColumn text="Timestamp" fx:id="colTimestamp" prefWidth="300.0" style="-fx-alignment: CENTER; -fx-font-size: 14;" />
            </columns>
        </TableView>

        <!-- Botón Atrás -->
        <Button text="Atrás" fx:id="btnAtras" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 5;" />
    </VBox>
</AnchorPane>
